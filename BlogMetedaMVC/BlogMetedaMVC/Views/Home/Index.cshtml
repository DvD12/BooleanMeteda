@{
    ViewData["Title"] = "Home Page";
}
@model Post

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@if (Model != null)
{
    <div class="text-center">
        <h1>@Model.Title</h1>
        <p>@Model.Content</p>
        <p><i>Autore: @Model.Author</i></p>
    </div>
}
else
{
    <div class="text-center">
        <h1>Non ci sono post</h1>
    </div>
}

<p>Sono le ore @(DateTime.Now.ToString("HH:mm:ss"))</p>

<div class="text-center">
    <a href="@Url.Action("Privacy", "Home")">
        Vai alla action Privacy del controller Home
    </a>
</div>